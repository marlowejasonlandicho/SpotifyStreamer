<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".TrackListActivity">

    <ImageView
        android:id="@+id/image_view_track"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_view_track_name"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/image_view_track"
        android:gravity="bottom"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:text="Artist name goes here..." />

    <TextView
        android:id="@+id/text_view_album_name"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/text_view_track_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_view_track"
        android:gravity="top"
        android:text="Album name goes here..." />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/image_view_track"
        android:layout_marginBottom="10dp"
        android:minHeight="?android:attr/listPreferredItemHeight" />
</RelativeLayout>