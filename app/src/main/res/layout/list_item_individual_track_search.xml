<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/image_view_track"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity="center|center_vertical|center"
        android:src="@mipmap/ic_launcher" />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_view_track_name"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/image_view_track"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:text="Artist name goes here..."
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_view_album_name"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/text_view_track_name"
        android:layout_toRightOf="@+id/image_view_track"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:text="Album name goes here..."
        android:textSize="16dp" />

</RelativeLayout>